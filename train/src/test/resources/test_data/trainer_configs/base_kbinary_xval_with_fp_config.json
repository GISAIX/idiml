{
  "trainerConfig": {
    "jsonClass": "KClassKFPBuilder",
    "dataGenBuilder": {
      "jsonClass": "KClassDataFrameGeneratorBuilder"
    },
    "furnaceBuilder": {
      "jsonClass": "XValWithFPLogisticRegressionFurnaceBuilder",
      "maxIterations": 1,
      "regParam": [
        0.1
      ],
      "tolerance": [
        1.0E-4
      ],
      "elasticNetParam": [
        1.0
      ],
      "numFolds": 2
    }
  },
  "pipelineConfig": {
    "pipelines": [ {
      "pipeline": [
        {
          "inputs": [
            "ngrams"
          ],
          "name": "convertToIndex"
        },
        {
          "inputs": [
            "bagOfWords"
          ],
          "name": "ngrams"
        },
        {
          "inputs": [
            "convertToTokens",
            "languageDetector"
          ],
          "name": "bagOfWords"
        },
        {
          "inputs": [
            "contentExtractor",
            "languageDetector",
            "contentTypeDetector"
          ],
          "name": "convertToTokens"
        },
        {
          "inputs": [
            "$document",
            "contentTypeDetector"
          ],
          "name": "languageDetector"
        },
        {
          "inputs": [
            "$document"
          ],
          "name": "contentExtractor"
        },
        {
          "inputs": [
             "$document"
          ],
          "name": "contentTypeDetector"
        },
        {
          "inputs": [
            "convertToIndex"
          ],
          "name": "$output"
        }
      ],
      "transforms": [
        {
          "class": "com.idibon.ml.feature.ContentExtractor",
          "name": "contentExtractor"
        },
        {
          "class": "com.idibon.ml.feature.ngram.NgramTransformer",
          "config": {
            "max": 3,
            "min": 1
          },
          "name": "ngrams"
        },
        {
          "class": "com.idibon.ml.feature.language.LanguageDetector",
          "name": "languageDetector"
        },
        {
          "class": "com.idibon.ml.feature.tokenizer.TokenTransformer",
          "name": "convertToTokens"
        },
        {
          "class": "com.idibon.ml.feature.indexer.IndexTransformer",
          "name": "convertToIndex",
          "config": {
            "minimumObservations": 2
          }
        },
        {
          "class": "com.idibon.ml.feature.bagofwords.BagOfWordsTransformer",
          "config": {
            "accept": [
              "Word",
              "Punctuation"
            ],
            "transform": "ToLower"
          },
          "name": "bagOfWords"
        },
        {
          "class": "com.idibon.ml.feature.contenttype.ContentTypeDetector",
          "name": "contentTypeDetector"
        }
      ] },
      {
        "pipeline": [
          {
            "inputs": [
              "bagOfWords"
            ],
            "name": "convertToIndex"
          },
          {
            "inputs": [
              "convertToTokens",
              "languageDetector"
            ],
            "name": "bagOfWords"
          },
          {
            "inputs": [
              "contentExtractor",
              "languageDetector",
              "contentTypeDetector"
            ],
            "name": "convertToTokens"
          },
          {
            "inputs": [
              "$document",
              "contentTypeDetector"
            ],
            "name": "languageDetector"
          },
          {
            "inputs": [
              "$document"
            ],
            "name": "contentExtractor"
          },
          {
            "inputs": [
              "$document"
            ],
            "name": "contentTypeDetector"
          },
          {
            "inputs": [
              "convertToIndex"
            ],
            "name": "$output"
          }
        ],
        "transforms": [
          {
            "class": "com.idibon.ml.feature.ContentExtractor",
            "name": "contentExtractor"
          },
          {
            "class": "com.idibon.ml.feature.language.LanguageDetector",
            "name": "languageDetector"
          },
          {
            "class": "com.idibon.ml.feature.tokenizer.TokenTransformer",
            "name": "convertToTokens"
          },
          {
            "class": "com.idibon.ml.feature.indexer.IndexTransformer",
            "name": "convertToIndex",
            "config": {
              "minimumObservations": 2
            }
          },
          {
            "class": "com.idibon.ml.feature.bagofwords.BagOfWordsTransformer",
            "config": {
              "accept": [
                "Word",
                "Punctuation"
              ],
              "transform": "ToLower"
            },
            "name": "bagOfWords"
          },
          {
            "class": "com.idibon.ml.feature.contenttype.ContentTypeDetector",
            "name": "contentTypeDetector"
          }
        ] }
    ],
    "version": "0.0.1"
  }
}
