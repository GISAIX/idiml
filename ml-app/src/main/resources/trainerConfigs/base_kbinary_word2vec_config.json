{
  "trainerConfig": {
    "jsonClass": "KClass1FPBuilder",
    "dataGenBuilder": {
      "jsonClass": "KClassDataFrameGeneratorBuilder"
    },
    "furnaceBuilder": {
      "jsonClass": "SimpleLogisticRegressionBuilder",
      "maxIterations":100,
      "regParam":[
        0.001
      ],
      "tolerance":[
        1.0E-4
      ],
      "elasticNetParam":[
        0.9
      ]
    }
  },
  "pipelineConfig": {
    "pipeline": [
      {
        "inputs": [
          "ngrams"
        ],
        "name": "convertToVector"
      },
      {
        "inputs": [
          "bagOfWords"
        ],
        "name": "ngrams"
      },
      {
        "inputs": [
          "convertToTokens",
          "languageDetector"
        ],
        "name": "bagOfWords"
      },
      {
        "inputs": [
          "contentExtractor",
          "languageDetector",
          "contentTypeDetector"
        ],
        "name": "convertToTokens"
      },
      {
        "inputs": [
          "$document",
          "contentTypeDetector"
        ],
        "name": "languageDetector"
      },
      {
        "inputs": [
          "$document"
        ],
        "name": "contentTypeDetector"
      },
      {
        "inputs": [
          "$document"
        ],
        "name": "contentExtractor"
      },
      {
        "inputs": [
          "convertToVector"
        ],
        "name": "$output"
      }
    ],
    "transforms": [
      {
        "class": "com.idibon.ml.feature.ContentExtractor",
        "name": "contentExtractor"
      },
      {
        "class": "com.idibon.ml.feature.ngram.NgramTransformer",
        "config": {
          "max": 3,
          "min": 1
        },
        "name": "ngrams"
      },
      {
        "class": "com.idibon.ml.feature.language.LanguageDetector",
        "name": "languageDetector"
      },
      {
        "class": "com.idibon.ml.feature.tokenizer.TokenTransformer",
        "name": "convertToTokens"
      },
      {
        "class": "com.idibon.ml.feature.contenttype.ContentTypeDetector",
        "name": "contentTypeDetector"
      },
      {
        "class": "com.idibon.ml.feature.word2vec.Word2VecTransformer",
        "name": "convertToVector",
        "config": {
          "uri": "file:///ROOT/PATH/TO/WORD2VEC_MODEL.bin.gz",
          "type": "bin"
        }
      },
      {
        "class": "com.idibon.ml.feature.bagofwords.BagOfWordsTransformer",
        "config": {
          "accept": [
            "Word",
            "Punctuation"
          ],
          "transform": "ToLower"
        },
        "name": "bagOfWords"
      }
    ],
    "version": "0.0.1"
  }
}