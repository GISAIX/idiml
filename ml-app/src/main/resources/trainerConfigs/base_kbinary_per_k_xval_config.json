{
  "trainerConfig": {
    "jsonClass": "KClass1FPBuilder",
    "dataGenBuilder": {
      "jsonClass": "KClassDataFrameGeneratorBuilder"
    },
    "furnaceBuilder": {
      "jsonClass":"PerLabelFurnaceBuilder",
      "labelFurances":{
        "04e81ce9-cf48-59cd-ba0a-c3b42d5cb0df":{
          "jsonClass":"XValLogisticRegressionBuilder",
          "maxIterations":100,
          "regParam":[
            0.1
          ],
          "tolerance":[
            1.0E-4
          ],
          "elasticNetParam":[
            1.0
          ],
          "numFolds":10
        },
        "350c8753-3e64-5380-8a2e-54182a48f369":{
          "jsonClass":"SimpleLogisticRegressionBuilder",
          "maxIterations":100,
          "regParam":[
            0.001
          ],
          "tolerance":[
            1.0E-4
          ],
          "elasticNetParam":[
            0.9
          ]
        }
      }
    }
  },
  "pipelineConfig": {
    "pipeline": [
      {
        "inputs": [
          "ngrams"
        ],
        "name": "convertToIndex"
      },
      {
        "inputs": [
          "bagOfWords"
        ],
        "name": "ngrams"
      },
      {
        "inputs": [
          "convertToTokens",
          "languageDetector"
        ],
        "name": "bagOfWords"
      },
      {
        "inputs": [
          "contentExtractor",
          "languageDetector",
          "contentTypeDetector"
        ],
        "name": "convertToTokens"
      },
      {
        "inputs": [
          "$document"
        ],
          "name": "contentTypeDetector"
      },
      {
        "inputs": [
          "$document"
        ],
        "name": "languageDetector"
      },
      {
        "inputs": [
          "$document"
        ],
        "name": "contentExtractor"
      },
      {
        "inputs": [
          "convertToIndex"
        ],
        "name": "$output"
      }
    ],
    "transforms": [
      {
        "class": "com.idibon.ml.feature.ContentExtractor",
        "name": "contentExtractor"
      },
      {
        "class": "com.idibon.ml.feature.ngram.NgramTransformer",
        "config": {
          "max": 3,
          "min": 1
        },
        "name": "ngrams"
      },
      {
        "class": "com.idibon.ml.feature.language.LanguageDetector",
        "name": "languageDetector"
      },
      {
        "class": "com.idibon.ml.feature.contenttype.ContentTypeDetector",
        "name": "contentTypeDetector"
      },
      {
        "class": "com.idibon.ml.feature.tokenizer.TokenTransformer",
        "name": "convertToTokens"
      },
      {
        "class": "com.idibon.ml.feature.indexer.IndexTransformer",
        "name": "convertToIndex",
        "config": {
          "minimumObservations": 2
        }
      },
      {
        "class": "com.idibon.ml.feature.bagofwords.BagOfWordsTransformer",
        "config": {
          "accept": [
            "Word",
            "Punctuation"
          ],
          "transform": "ToLower"
        },
        "name": "bagOfWords"
      }
    ],
    "version": "0.0.1"
  }
}
